@model SW_project.Models.BookingViewModel

@if (Model.IsValid == true)
{
     <script>
               $(document).ready(function () {

                    $("#result").attr('type', 'button');
                    $("#result").text("Next");

                    $('html, body').animate({
                         'scrollTop': 550
                    }, 800);
               });
     </script>
     bool HasPlan = Model.db.BookingInfo.Where(x => x.City == Model.SelectedCityFrom)
                         .Select(x => x.HasPlan).Distinct().ToArray()[0];

     bool HasBus = Model.db.BookingInfo.Where(x => x.City == Model.SelectedCityFrom)
               .Select(x => x.HasBus).Distinct().ToArray()[0];

     bool HasTrain = Model.db.BookingInfo.Where(x => x.City == Model.SelectedCityFrom)
               .Select(x => x.HasTrain).Distinct().ToArray()[0];

     if (HasPlan == true)
     {
          <script>
                    $(document).ready(function () {
                         $("#result").on("click", function () {
                              $('#photo').css('display', 'none');
                              $('.img').css('display', 'inline');
                              $('.subgate').animate({
                                   width: '68%'
                              });
                         });
                    });
          </script>
     }
     else if (HasBus == true && HasTrain == true)
     {
          <script>
                         $(document).ready(function () {
                              $("#result").on("click", function () {
                                   $('#photo').css('display', 'none');
                                   $('#img2 , #img3').css('display', 'inline');
                                   $('#subgate2 , #subgate3').animate({
                                        width: '68%'
                                   });
                              });
                         });
          </script>
     }
     else if (HasBus == true && HasTrain == false)
     {
          <script>
                         $(document).ready(function () {
                              $("#result").on("click", function () {
                                   $('#photo').css('display', 'none');
                                   $('#img2').css('display', 'inline');
                                   $('#subgate2').animate({
                                        width: '68%'
                                   });
                              });
                         });
          </script>
     }
     else if (HasBus == false && HasTrain == true)
     {
          <script>
                         $(document).ready(function () {
                              $("#result").on("click", function () {
                                   $('#photo').css('display', 'none');
                                   $('#img3').css('display', 'inline');
                                   $('#subgate2').animate({
                                        width: '68%'
                                   });
                              });
                         });
          </script>
     }

}